<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_ten_dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:gravity="center">

    <com.nebulacompanies.ibo.view.MyTextView
        style="@style/StyleTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Information"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="@dimen/dimen_normal_callibri" />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dimen_five_dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:visibility="invisible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="@dimen/dimen_five_dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_five_dp"
            app:civ_border_color="@color/nebula"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@android:color/white">

                <com.nebulacompanies.ibo.view.MyTextView
                    style="@style/StyleTitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:padding="0dp"
                    android:text="ID"
                    android:textSize="@dimen/dimen_normal_callibri" />

                <com.nebulacompanies.ibo.view.MyTextView
                    style="@style/StyleTitleTextView"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text=":"
                    android:textSize="@dimen/dimen_normal_callibri" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/txtIBOId"
                    style="@style/StyleTitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="@dimen/dimen_normal_callibri" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llIBOName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_five_dp">

                <com.nebulacompanies.ibo.view.MyTextView
                    style="@style/StyleTitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.80"
                    android:padding="0dp"
                    android:text="IBO"
                    android:textSize="@dimen/dimen_normal_callibri" />

                <com.nebulacompanies.ibo.view.MyTextView
                    style="@style/StyleTitleTextView"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:padding="0dp"
                    android:text=":"
                    android:textSize="@dimen/dimen_normal_callibri" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/txtIBOName"
                    style="@style/StyleTitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:textSize="@dimen/dimen_normal_callibri" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_five_dp"
                android:background="@android:color/white">

                <com.nebulacompanies.ibo.view.MyTextView
                    style="@style/StyleTitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.80"
                    android:padding="0dp"
                    android:text="Mobile No."
                    android:textSize="@dimen/dimen_normal_callibri" />

                <com.nebulacompanies.ibo.view.MyTextView
                    style="@style/StyleTitleTextView"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:padding="0dp"
                    android:text=":"
                    android:textSize="@dimen/dimen_normal_callibri" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/txtMobileNo"
                    style="@style/StyleTitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:autoLink="phone"
                    android:padding="0dp"
                    android:textSize="@dimen/dimen_normal_callibri" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
