<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_booster_income"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/dimen_ten_dp"
    android:padding="@dimen/dimen_eight_dp"
    android:weightSum="1">

    <com.nebulacompanies.ibo.view.MyTextView
        android:id="@+id/booster_index"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="1"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dimen_twelve_sp"
        tools:ignore="RtlCompat" />

    <com.nebulacompanies.ibo.view.MyTextView
        android:id="@+id/unit_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:background="@drawable/nebula_effect"
        android:gravity="start"
        android:layout_gravity="center"
        android:text="unit no"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dimen_twelve_sp" />

    <ProgressBar
        android:id="@+id/booster_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_weight="0.5"
        android:max="100"
        android:progressDrawable="@drawable/nv_custom_progress_bar_horizontal" />

    <com.nebulacompanies.ibo.view.MyTextView
        android:id="@+id/ahd_payment_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:gravity="start"
        android:text="102%"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dimen_twelve_sp" />
</LinearLayout>