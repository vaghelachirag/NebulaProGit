<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <com.nebulacompanies.ibo.ecom.trackorder.TimelineView
        android:id="@+id/timeline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:lineColor="@color/colorYellow"
        app:lineOrientation="vertical"
        app:lineSize="4dp"
        app:markerActive="false"
        app:markerActiveColor="@color/colorActiveItem"
        app:markerActiveStrokeWidth="8dp"
        app:markerColor="@color/colorYellow"
        app:markerSize="35dp"
        app:markerStrokeWidth="2dp"
        app:markerTextColor="@color/colorYellow"
        app:markerTextSize="10sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp">

        <include layout="@layout/card_items"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>