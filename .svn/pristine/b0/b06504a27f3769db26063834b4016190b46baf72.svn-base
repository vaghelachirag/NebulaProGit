<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln_my_downline"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="12">

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/leg_placement1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="@dimen/dimen_eight_dp"
            android:singleLine="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_twelve_sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cfcfcf" />

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/member_id_placement1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="@dimen/dimen_eight_dp"
            android:singleLine="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_twelve_sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cfcfcf" />

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/member_name_placement1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:padding="@dimen/dimen_eight_dp"
            android:singleLine="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_twelve_sp" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cfcfcf" />

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/rank_placement1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="@dimen/dimen_eight_dp"
            android:singleLine="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_twelve_sp" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cfcfcf"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/more_info_placement_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/nebula_effect"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_info_black"
            android:visibility="gone" />

        <!--<TextView
            android:id="@+id/more_info_placement_"
            android:layout_width="0dp"
            android:layout_height = "wrap_content"
            android:layout_weight="2"
            android:gravity = "center"
            android:padding = "5dp"
            android:text="@string/info"
            android:textColor = "@android:color/black"
            android:singleLine="false"
            android:layout_gravity="center"/>-->

    </LinearLayout>

</LinearLayout>