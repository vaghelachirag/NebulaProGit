<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_rounded_alert_ecom"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_rounded_ecom_profile_title"
        android:orientation="horizontal"
        android:weightSum="2">

         <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/dimen_eight_dp"
            android:text="My Profile"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_sixteen_sp" />


        <ImageView
            android:id="@+id/img_profile_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dimen_five_dp"
            android:background="@drawable/nebula_effect"
            android:contentDescription="@null"
            android:padding="@dimen/dimen_five_dp"
            app:srcCompat="@drawable/ic_close_new_white" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_ten_dp"
        android:layout_marginTop="@dimen/dimen_ten_dp"
        android:layout_marginEnd="@dimen/dimen_ten_dp"
        android:layout_marginBottom="@dimen/dimen_ten_dp"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_two_dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_five_dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_user_name" />

             <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="start|center"
                android:padding="@dimen/dimen_four_dp"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_fourteen_sp" />

             <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/tv_my_profile_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.90"
                android:gravity="start|center"
                android:padding="@dimen/dimen_four_dp"
                android:text=" "
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_fourteen_sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_five_dp"
            android:gravity="center_vertical"

            android:orientation="horizontal"
            android:padding="@dimen/dimen_two_dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_five_dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_mobile_security" />

             <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_weight="0.3"
                android:gravity="start|center"
                android:padding="@dimen/dimen_four_dp"
                android:text="Mobile"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_fourteen_sp" />

             <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/tv_my_profile_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.90"
                android:gravity="start|center"
                android:padding="@dimen/dimen_four_dp"
                android:text="9726545886"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_fourteen_sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_five_dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_two_dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_five_dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_mail" />

             <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="start|center"
                android:padding="@dimen/dimen_four_dp"
                android:text="Email"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_fourteen_sp" />

             <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/tv_my_profile_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.90"
                android:gravity="start|center"
                android:padding="@dimen/dimen_four_dp"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_fourteen_sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_five_dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_eight_dp"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_gender" />

            <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:gravity="start|center"
                android:padding="@dimen/dimen_four_dp"
                android:text="Gender"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_fourteen_sp" />

             <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/tv_my_profile_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.90"
                android:gravity="start|center"
                android:padding="@dimen/dimen_four_dp"
                android:text="Male"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_fourteen_sp" />


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dimen_thirty_dp"
        android:layout_marginLeft="@dimen/dimen_thirty_dp"
        android:layout_marginEnd="@dimen/dimen_thirty_dp"
        android:layout_marginRight="@dimen/dimen_thirty_dp"
        android:layout_marginBottom="@dimen/dimen_five_dp"
        android:background="#66000000"
        android:visibility="gone" />


</LinearLayout>