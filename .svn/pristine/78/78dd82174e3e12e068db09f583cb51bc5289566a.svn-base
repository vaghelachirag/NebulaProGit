<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/colorAccentt"
                android:centerY="0.5"
                android:endColor="@color/colorAccentt"
                android:startColor="@color/colorAccentt" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/GREEN"
                    android:startColor="@color/GREEN"/>
            </shape>
        </clip>
    </item>
</layer-list>