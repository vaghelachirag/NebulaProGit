<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <!-- <androidx.cardview.widget.CardView
        android:id="@+id/card_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/nebula_effect_opicity"
        app:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="3dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_five_dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_user_new"
                    app:tint="@color/gray_light" />

                <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                    android:id="@+id/user_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/dimen_fourteen_sp"
                    android:visibility="gone"
                    android:text="12/03/2021"
                    android:textColor="@color/gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/img_user"
                    android:layout_alignBottom="@+id/img_user"
                    android:layout_marginRight="@dimen/dimen_five_dp"
                    android:layout_toLeftOf="@+id/user_date"
                    android:layout_toRightOf="@+id/img_user"
                 android:layout_alignParentLeft="true"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:paddingLeft="@dimen/dimen_six_dp"
                        android:paddingRight="@dimen/dimen_six_dp"
                        android:paddingTop="@dimen/dimen_two_dp"
                        android:paddingBottom="@dimen/dimen_two_dp"
                        android:orientation="horizontal">

                        <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                            android:id="@+id/user_verified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dimen_twelve_sp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:drawableTint="@color/white"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_star_black"
                            app:tint="@color/white" />

                    </LinearLayout>
                    <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Awsome product"
                        android:textSize="@dimen/dimen_fourteen_sp"
                        android:layout_marginLeft="@dimen/dimen_five_dp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:textColor="@color/black" />
                </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desc..."
                android:paddingTop="@dimen/dimen_five_dp"
                android:textSize="@dimen/dimen_fourteen_sp"
                android:textColor="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <com.nebulacompanies.ibo.ecom.utils.MyBoldTextViewEcom
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_five_dp"
                android:layout_gravity="center"
                android:text="Anchal gulati"
                android:textColor="#686868"
               android:textSize="@dimen/dimen_twelve_sp" />

                <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_five_dp"
                    android:layout_marginLeft="@dimen/dimen_ten_dp"
                    android:text="Certified Buyer"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_baseline_check_circle_18"
                    android:textColor="#C0C0C0"
                    android:textSize="@dimen/dimen_twelve_sp" />

                <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_five_dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="-2dp"
                    android:text="."
                    android:gravity="center"
                    android:textColor="#C0C0C0"
                    android:textSize="@dimen/dimen_twelve_sp" />

                <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_five_dp"
                    android:text="sadas"
                    android:layout_gravity="center"
                    android:textColor="#C0C0C0"
                    android:textSize="@dimen/dimen_twelve_sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#F5F5F5" />
        </LinearLayout>


   <!-- </androidx.cardview.widget.CardView>-->

</LinearLayout>
