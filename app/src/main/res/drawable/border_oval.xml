<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="oval">

            <solid
                android:color="@android:color/darker_gray"/>

            <size
                android:width="30dp"
                android:height="30dp"/>
        </shape>
    </item>
    <item >
        <shape
            android:shape="oval">

            <solid
                android:color="@android:color/white"/>

            <size
                android:width="34dp"
                android:height="34dp"/>
        </shape>
    </item>

</layer-list>
