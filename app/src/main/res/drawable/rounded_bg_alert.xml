<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>

            <item>
                <shape>
                    <gradient
                        android:angle="0"
                        android:centerColor="@color/view_color"
                        android:endColor="@color/view_color"
                        android:gradientRadius="50"
                        android:startColor="@color/view_color"
                        android:type="linear" />
                    <stroke
                        android:width="1dp"
                        android:color="#007aff" />
                    <corners
                        android:radius="5dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>

            <item>
                <shape
                    android:shape="rectangle">
                    <gradient
                        android:angle="0"
                        android:centerColor="#007aff"
                        android:endColor="#007aff"
                        android:gradientRadius="10"
                        android:startColor="#007aff"
                        android:type="linear" />
                    <stroke
                        android:width="1dp"
                        android:color="#007aff" />
                    <corners
                        android:radius="5dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>