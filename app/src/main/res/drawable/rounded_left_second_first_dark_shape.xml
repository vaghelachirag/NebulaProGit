<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="1dp" android:color="@color/view_color" />
            <solid android:color="@color/view_color" />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />
        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:top="0dp" android:left="1dp" android:right="1dp" android:bottom="1dp" >
        <shape
            android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <!--
                        <stroke android:width="1dp" android:color="@android:color/white" />
            -->
            <solid android:color="@color/view_color" />
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />
        </shape>
    </item>




</layer-list>