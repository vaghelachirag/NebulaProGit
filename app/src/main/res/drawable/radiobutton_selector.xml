<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
            <gradient android:angle="270"
                android:endColor="#f0c350"
                android:centerColor="#f0c350"
                android:startColor="#f5dc9c" />
            <stroke android:width="1dp"
                android:color="@color/colorStroke" />
        </shape>
    </item>


    <item>
        <shape>

            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
            <!-- this one is ths color of the Rounded Button -->
            <solid android:color="@android:color/white" />

            <stroke android:width="1dp"
                android:color="@color/colorStroke" />
        </shape>
    </item>
</selector>


