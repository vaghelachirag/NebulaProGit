<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sales_swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="@dimen/dimen_ten_dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ln_rank_bonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/tablelayout8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_thirty_dp"
                android:background="@drawable/table_effect_up"
                android:orientation="horizontal"
                android:weightSum="11">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/cust_name_"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="false"
                    android:text="@string/customer_name"
                    android:textColor="#ffffff" />

                <View
                    android:id="@+id/apartment_view"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#cfcfcf" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/apartment_"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:padding="5dp"
                    android:singleLine="false"
                    android:text="@string/unit"
                    android:textColor="#ffffff" />


                <View
                    android:id="@+id/sale_view"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#cfcfcf" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/sale_info_"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:singleLine="false"
                    android:text="@string/sale_info"
                    android:textColor="#ffffff" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_effect_down"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_three_dp"
                    android:background="@drawable/drawable_rounded_white_popup"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/listview_my_sales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        android:fadeScrollbars="false"
                        android:layoutAnimation="@anim/layout_animation_fall_down"
                        android:smoothScrollbar="true" />

                    <include
                        layout="@layout/layout_empty_view"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
