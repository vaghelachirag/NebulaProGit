<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@drawable/dialog_background_inset_popup"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/table_effect_popup"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_two_dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.62"
                    android:paddingTop="@dimen/dimen_two_dp"
                    android:paddingBottom="@dimen/dimen_two_dp"
                    android:paddingLeft="@dimen/dimen_four_dp"
                    android:paddingStart="@dimen/dimen_four_dp"
                    android:paddingRight="@dimen/dimen_two_dp"
                    android:paddingEnd="@dimen/dimen_two_dp"
                    android:background="@drawable/drawable_rounded_green_top_info_popup"
                    android:gravity="start|center"
                    android:text="@string/incomeorshare"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_twelve_sp" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/share_amt_starpool1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.38"
                    android:paddingTop="@dimen/dimen_two_dp"
                    android:paddingBottom="@dimen/dimen_two_dp"
                    android:paddingLeft="@dimen/dimen_four_dp"
                    android:paddingStart="@dimen/dimen_four_dp"
                    android:paddingRight="@dimen/dimen_two_dp"
                    android:paddingEnd="@dimen/dimen_two_dp"
                    android:background="@drawable/drawable_rounded_white_top_info_popup"
                    android:gravity="start|center"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_twelve_sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cfcfcf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.62"
                    android:paddingTop="@dimen/dimen_two_dp"
                    android:paddingBottom="@dimen/dimen_two_dp"
                    android:paddingLeft="@dimen/dimen_four_dp"
                    android:paddingStart="@dimen/dimen_four_dp"
                    android:paddingRight="@dimen/dimen_two_dp"
                    android:paddingEnd="@dimen/dimen_two_dp"
                    android:background="@color/nebula"
                    android:gravity="start|center"
                    android:text="@string/tds"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_twelve_sp" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/tds1"
                    android:layout_width="0dp"
                    android:paddingTop="@dimen/dimen_two_dp"
                    android:paddingBottom="@dimen/dimen_two_dp"
                    android:paddingLeft="@dimen/dimen_four_dp"
                    android:paddingStart="@dimen/dimen_four_dp"
                    android:paddingRight="@dimen/dimen_two_dp"
                    android:paddingEnd="@dimen/dimen_two_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.38"
                    android:background="@drawable/drawable_rounded_white_info_popup"
                    android:gravity="start|center"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_twelve_sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cfcfcf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/dimen_two_dp"
                    android:paddingBottom="@dimen/dimen_two_dp"
                    android:paddingLeft="@dimen/dimen_four_dp"
                    android:paddingStart="@dimen/dimen_four_dp"
                    android:paddingRight="@dimen/dimen_two_dp"
                    android:paddingEnd="@dimen/dimen_two_dp"
                    android:layout_weight="0.62"
                    android:background="@color/nebula"
                    android:gravity="start|center"
                    android:text="@string/net_amount"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_twelve_sp" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/net_amt_starpool1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.38"
                    android:background="@drawable/drawable_rounded_white_info_popup"
                    android:gravity="start|center"
                    android:paddingTop="@dimen/dimen_two_dp"
                    android:paddingBottom="@dimen/dimen_two_dp"
                    android:paddingLeft="@dimen/dimen_four_dp"
                    android:paddingStart="@dimen/dimen_four_dp"
                    android:paddingRight="@dimen/dimen_two_dp"
                    android:paddingEnd="@dimen/dimen_two_dp"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_twelve_sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cfcfcf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:layout_width="0dp"
                    android:paddingTop="@dimen/dimen_two_dp"
                    android:paddingBottom="@dimen/dimen_two_dp"
                    android:paddingLeft="@dimen/dimen_four_dp"
                    android:paddingStart="@dimen/dimen_four_dp"
                    android:paddingRight="@dimen/dimen_two_dp"
                    android:paddingEnd="@dimen/dimen_two_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.62"
                    android:background="@drawable/drawable_rounded_green_bottom_info_popup"
                    android:gravity="start|center"
                    android:text="@string/shares"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_twelve_sp" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/shares_starpool1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.38"
                    android:gravity="start|center"
                    android:paddingTop="@dimen/dimen_two_dp"
                    android:paddingBottom="@dimen/dimen_two_dp"
                    android:paddingLeft="@dimen/dimen_four_dp"
                    android:paddingStart="@dimen/dimen_four_dp"
                    android:paddingRight="@dimen/dimen_two_dp"
                    android:paddingEnd="@dimen/dimen_two_dp"
                    android:background="@drawable/drawable_rounded_white_bottom_info_popup"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_twelve_sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>