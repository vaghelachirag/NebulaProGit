<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dialog_background_inset"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/table_effect"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.nebulacompanies.ibo.view.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.34"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="@dimen/dimen_twelve_sp"
                android:text="#"
                android:textColor="#ffffff" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cfcfcf" />

            <com.nebulacompanies.ibo.view.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.2"
                android:gravity="center"
                android:textSize="@dimen/dimen_twelve_sp"
                android:padding="5dp"
                android:text="@string/emi_date"
                android:textColor="#ffffff" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cfcfcf" />

            <com.nebulacompanies.ibo.view.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.9"
                android:gravity="center"
                android:textSize="@dimen/dimen_twelve_sp"
                android:padding="5dp"
                android:text="@string/amount"
                android:textColor="#ffffff" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cfcfcf" />

            <com.nebulacompanies.ibo.view.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.13"
                android:textSize="@dimen/dimen_twelve_sp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/status"
                android:textColor="#ffffff" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cfcfcf" />

            <com.nebulacompanies.ibo.view.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:gravity="center"
                android:textSize="@dimen/dimen_twelve_sp"
                android:padding="5dp"
                android:text="@string/bv1"
                android:textColor="#ffffff" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cfcfcf" />

            <com.nebulacompanies.ibo.view.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/dimen_twelve_sp"
                android:padding="5dp"
                android:text="@string/nv"
                android:textColor="#ffffff" />


        </LinearLayout>

        <include
            layout="@layout/layout_empty_view"
            android:visibility="gone" />

        <ListView
            android:id="@+id/listview_sales_telecallerlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_two_dp"
            android:background="@drawable/drawable_rounded_white_popup"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:paddingStart="@dimen/dimen_three_dp"
            android:paddingEnd="@dimen/dimen_three_dp"
            android:paddingRight="@dimen/dimen_three_dp"
            android:layout_marginBottom="@dimen/dimen_five_dp"
            android:paddingLeft="@dimen/dimen_three_dp"
            android:paddingBottom="@dimen/dimen_three_dp"
            android:fadeScrollbars="false"
            android:layoutAnimation="@anim/layout_animation_fall_down"
            android:smoothScrollbar="true" />
    </LinearLayout>
</LinearLayout>