<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_toast_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dimen_thirty_eight_dp"
    android:layout_marginStart="@dimen/dimen_thirty_eight_dp"
    android:background="@drawable/drawable_rounded_toast"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_four_dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_eight_dp"
        app:srcCompat="@drawable/ic_shopped" />


    <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
        android:id="@+id/txt_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_six_dp"
        android:layout_marginBottom="@dimen/dimen_six_dp"
        android:layout_marginEnd="@dimen/dimen_six_dp"
        android:textColor="@color/black"
        android:text="87 people have purchased this product in the last 30 days."
        android:textSize="@dimen/dimen_sixteen_sp"
        android:textStyle="bold" />
</LinearLayout>