<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background_inset_tc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/table_effect_up"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/dimen_eight_dp"
                    android:text="@string/disclaimer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_sixteen_sp" />

                <ImageView
                    android:id="@+id/img_policy_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dimen_five_dp"
                    android:background="@drawable/nebula_effect"
                    android:contentDescription="@null"
                    android:padding="@dimen/dimen_five_dp"
                    app:srcCompat="@drawable/ic_close_new_white" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/dimen_two_dp"
                android:layout_marginStart="@dimen/dimen_two_dp"
                android:background="#cfcfcf" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_two_dp"
            android:layout_marginEnd="@dimen/dimen_two_dp"
            android:layout_marginStart="@dimen/dimen_two_dp"
            android:background="@drawable/drawable_rounded_white_popup"
            android:fadeScrollbars="false"
            android:padding="@dimen/dimen_three_dp"
            android:scrollbarThumbVertical="@color/click_effect">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_three_dp"
                android:layout_marginEnd="@dimen/dimen_three_dp"
                android:layout_marginStart="@dimen/dimen_three_dp"
                android:background="@drawable/drawable_rounded_white_popup"
                android:orientation="vertical">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/tv_policy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_ten_dp"
                    android:textColor="@color/black" />

                <!--   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginEnd="@dimen/dimen_three_dp"
                       android:layout_marginStart="@dimen/dimen_three_dp"
                       android:layout_marginBottom="@dimen/dimen_three_dp"
                       android:background="@drawable/drawable_rounded_white_popup"
                       android:orientation="vertical">-->


                <!--   </LinearLayout>-->

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>