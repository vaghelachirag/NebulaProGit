<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llEmpty1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/drawable_rounded_white_popup"
    android:layout_margin="@dimen/dimen_two_dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgError1"
        android:layout_width="@dimen/no_internet_size"
        android:layout_height="@dimen/no_internet_size"
        app:srcCompat="@drawable/ic_cloud_off_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <com.nebulacompanies.ibo.view.MyTextView
        android:id="@+id/txtErrorTitle1"
        style="@style/styleTextViewLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/error_no_records"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/dimen_twenty_sp" />


    <com.nebulacompanies.ibo.view.MyTextView
        android:id="@+id/txtErrorsubTitle1"
        style="@style/styleTextViewLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/error_no_records"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="gone"
        android:textSize="@dimen/dimen_fourteen_dp" />


    <com.nebulacompanies.ibo.view.MyTextView
        android:id="@+id/txtRetry1"
        style="@style/styleTextViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:text="Retry"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:visibility="gone"
        android:background="@drawable/nebula_effect"/>
</LinearLayout>