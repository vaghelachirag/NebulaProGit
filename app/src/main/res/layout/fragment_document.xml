<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.nebulacompanies.ibo.view.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nebula"
        android:text="Documents"
        android:textSize="@dimen/dimen_sixteen_sp"
        android:textColor="@android:color/white"
        android:layout_margin="@dimen/dimen_five_dp"
        android:padding="@dimen/dimen_ten_dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_five_dp"
                    android:orientation="horizontal">

                    <com.nebulacompanies.ibo.view.MyTextView
                        android:textSize="@dimen/dimen_twelve_sp"
                        android:id="@+id/txtLabelPhotoIdProofFirst"
                        style="@style/styleTextViewLabelCustomerBooking"
                        android:layout_width="0dp"
                        android:layout_weight="0.50"
                        android:text="Photo ID Proof" />

                    <Spinner
                        android:id="@+id/spinnerPhotoIdProof"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_height_spinner"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dimen_five_dp"
                        android:layout_weight="1"
                        android:background="@drawable/drawable_spinner_rounded"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/array_id_proof"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_height_edit_text"
                    android:layout_margin="@dimen/dimen_five_dp"
                    android:background="@drawable/drawable_rounded"
                    android:orientation="horizontal">

                    <com.nebulacompanies.ibo.view.MyTextView
                        android:textSize="@dimen/dimen_twelve_sp"
                        android:id="@+id/txtIdProofLabel"
                        style="@style/styleTextViewLabelCustomerBooking"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="150"
                        android:gravity="center_vertical"
                        android:hint="Photo ID Proof*"
                        android:maxLines="1"
                        android:padding="@dimen/dimen_five_dp" />



                    <ImageView
                        android:id="@+id/imgCaptureIdProof"
                        android:layout_width="@dimen/dimen_height_edit_text"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_five_dp"
                        android:src="@drawable/icon_camera" />


                </LinearLayout>

                <com.nebulacompanies.ibo.view.NebulaEditText
                    android:textSize="@dimen/dimen_twelve_sp"
                    android:id="@+id/txtIdProofNumber"
                    style="@style/styleSmallEditTextCustomerBooking"
                    android:background="@drawable/drawable_rounded"
                    android:hint="@string/prompt_pan"
                    android:inputType="text"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_five_dp"
                    android:orientation="horizontal">

                    <com.nebulacompanies.ibo.view.MyTextView
                        android:textSize="@dimen/dimen_twelve_sp"
                        android:id="@+id/txtAddressProofLabelFirst"
                        style="@style/styleTextViewLabelCustomerBooking"
                        android:layout_width="0dp"
                        android:layout_weight="0.50"
                        android:text="Address Proof" />

                    <Spinner
                        android:id="@+id/spinnerAddressProof"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_height_spinner"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dimen_five_dp"
                        android:layout_weight="1"
                        android:background="@drawable/drawable_spinner_rounded"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/array_address_proof"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_height_edit_text"
                    android:layout_margin="@dimen/dimen_five_dp"
                    android:background="@drawable/drawable_rounded"
                    android:orientation="horizontal">

                    <com.nebulacompanies.ibo.view.MyTextView
                        android:textSize="@dimen/dimen_twelve_sp"
                        android:id="@+id/txtAddressProofLabel"
                        style="@style/styleTextViewLabelCustomerBooking"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="150"
                        android:gravity="center_vertical"
                        android:hint="Address Proof*"
                        android:maxLines="1"
                        android:padding="@dimen/dimen_five_dp" />


                    <ImageView
                        android:id="@+id/imgCaptureAddressProof"
                        android:layout_width="@dimen/dimen_height_edit_text"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_five_dp"
                        android:src="@drawable/icon_camera" />

                </LinearLayout>




                <com.nebulacompanies.ibo.view.MyButton
                    android:textSize="@dimen/dimen_twelve_sp"
                    android:id="@+id/btnNextApplicantPhoto"
                    style="@style/styleButtonBlue"
                    android:layout_width="150dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/prompt_next" />
            </LinearLayout>
    </RelativeLayout>