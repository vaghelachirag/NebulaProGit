<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    android:layout_marginTop="@dimen/dimen_six_dp"
    android:layout_marginBottom="@dimen/dimen_six_dp"
    android:layout_marginStart="@dimen/dimen_two_dp"
    android:layout_marginEnd="@dimen/dimen_two_dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_address"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_six_dp"
            android:layout_toEndOf="@+id/rd_address"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.nebulacompanies.ibo.ecom.utils.MyBoldTextViewEcom
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:padding="@dimen/dimen_two_dp"
                    android:textSize="@dimen/dimen_sixteen_sp" />

                <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                    android:id="@+id/tv_address_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="@dimen/dimen_two_dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_fourteen_sp" />

                <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                    android:id="@+id/tv_address_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="@dimen/dimen_two_dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_fourteen_sp" />

                <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                    android:id="@+id/tv_address_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="@dimen/dimen_two_dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_fourteen_sp" />

                <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                    android:id="@+id/tv_address_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="@dimen/dimen_two_dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_fourteen_sp" />

                <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                    android:id="@+id/tv_address_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:padding="@dimen/dimen_two_dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_fourteen_sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_eight_dp"
                    android:layout_marginBottom="@dimen/dimen_ten_dp"
                    android:orientation="horizontal">



                <com.nebulacompanies.ibo.ecom.utils.MyButtonEcom
                    android:id="@+id/btn_address_edit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_thirty_five_dp"
                    android:background="@drawable/nebula_button_address_ecom"
                    android:layout_marginRight="5dp"
                    android:padding="@dimen/dimen_five_dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Edit"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimen_fourteen_sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_weight=".7"
                        android:layout_height="@dimen/dimen_one_dp"/>

                    <com.nebulacompanies.ibo.ecom.utils.MyButtonEcom
                        android:id="@+id/btn_address_remove"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="@dimen/dimen_thirty_five_dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/nebula_button_address_ecom"
                        android:padding="@dimen/dimen_five_dp"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:text="Remove"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/dimen_fourteen_sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>