<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/laydata"
    android:layout_marginTop="@dimen/dimen_five_dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="@dimen/dimen_ten_dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/nebula_effect_opicity"
        app:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/product_size"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_five_dp"
                android:text="1"
                android:background="@drawable/textview_square"
                android:textColor="@color/black"/>

            <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/product_available"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerInParent="true"
                android:background="@drawable/textview_square"
                android:visibility="gone"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/product_unavailable"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_close_24"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>




