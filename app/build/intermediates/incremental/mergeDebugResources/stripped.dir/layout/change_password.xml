<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_inset_popup"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_effect"
        android:orientation="vertical">

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/change_password_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_thirty_dp"
            android:gravity="center"
            android:hint="@string/old_password"
            android:text="@string/change_password"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_fourteen_sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_two_dp"
            android:layout_marginEnd="@dimen/dimen_two_dp"
            android:layout_marginStart="@dimen/dimen_two_dp"
            android:background="@drawable/drawable_rounded_white_popup"
            android:orientation="vertical">

            <com.nebulacompanies.ibo.view.NebulaEditText
                android:id="@+id/old_password"
                style="@style/StyleTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/old_password"
                android:inputType="textPassword"
                android:textSize="@dimen/dimen_twelve_sp" />

            <com.nebulacompanies.ibo.view.NebulaEditText
                android:id="@+id/new_password"
                style="@style/StyleTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:textSize="@dimen/dimen_twelve_sp" />

            <com.nebulacompanies.ibo.view.NebulaEditText
                android:id="@+id/confirm_password"
                style="@style/StyleTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:textSize="@dimen/dimen_twelve_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_ten_dp"
                android:layout_marginTop="@dimen/dimen_ten_dp"
                android:gravity="center">

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dimen_five_dp"
                    android:layout_marginRight="@dimen/dimen_five_dp"
                    android:layout_weight="1"
                    android:background="@drawable/red_button_background"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="#f8f4f4"
                    android:textSize="@dimen/dimen_twelve_sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/change_password_button"
                    android:layout_width="@dimen/dimen_eighty_dp"
                    android:layout_height="@dimen/dimen_thirty_dp"
                    android:layout_gravity="center"
                    android:background="@drawable/nebula_button_login_eftct_login"
                    android:gravity="center"
                    android:padding="@dimen/dimen_five_dp"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_twelve_sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>