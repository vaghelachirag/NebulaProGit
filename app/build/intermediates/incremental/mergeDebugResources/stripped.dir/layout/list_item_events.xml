<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_four_dp"
    android:layout_marginEnd="@dimen/dimen_twenty_dp"
    android:layout_marginLeft="@dimen/dimen_twenty_dp"
    android:layout_marginRight="@dimen/dimen_twenty_dp"
    android:layout_marginStart="@dimen/dimen_twenty_dp"
    android:layout_marginTop="@dimen/dimen_four_dp"
    android:focusable="true"
    android:foreground="@drawable/cardview_selector"
    android:orientation="vertical">

    <com.nebulacompanies.ibo.view.MyBoldTextView
        android:id="@+id/list_item_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="@dimen/dimen_twelve_sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_ten_dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_location"/>


        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/list_item_place1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_two_dp"
            android:layout_marginStart="@dimen/dimen_two_dp"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/dimen_eleven_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="@dimen/dimen_ten_dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_date" />

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/list_item_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_two_dp"
            android:layout_marginStart="@dimen/dimen_two_dp"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/dimen_eleven_sp" />
    </LinearLayout>
</LinearLayout>

