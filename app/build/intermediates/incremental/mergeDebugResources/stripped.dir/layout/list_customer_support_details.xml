<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="https://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:animateLayoutChanges="true">



    <com.daasuu.bl.BubbleLayout
        android:id="@+id/ly_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/dimen_ten_dp"
        app:bl_bubbleColor="@color/light_yellow"
        app:bl_strokeColor="@color/light_yellow"
        app:bl_arrowDirection="right"
        app:bl_arrowHeight="8dp"
        app:bl_arrowPosition="40dp"
        app:bl_arrowWidth="8dp"
        app:bl_cornersRadius="6dp"
        app:bl_strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
             >
            <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:text="ABCD"
                android:visibility="gone"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_fourteen_dp"
                />
            <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/receiver_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:text="Hello How are you?"
                android:autoLink="web"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_fourteen_dp"
               />
            <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/attched_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_four_dp"
                android:drawableStart="@drawable/ic_attach_file"
                android:gravity="start"
                android:text="@string/attachment"
                android:textColor="@color/blue"
                android:textSize="@dimen/dimen_fourteen_dp" />
            <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/created_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dimen_four_dp"
                android:text="02-04-2019"
                android:textColor="@color/out_stock_color"
                android:textSize="@dimen/dimen_twelve_sp"/>

        </LinearLayout>
    </com.daasuu.bl.BubbleLayout>


    <com.daasuu.bl.BubbleLayout
        android:id="@+id/ly_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:layout_gravity="start"
        android:layout_margin="@dimen/dimen_ten_dp"
        app:bl_arrowDirection="left"
        app:bl_bubbleColor="@color/light_blue"
        app:bl_strokeColor="@color/light_blue"
        app:bl_arrowHeight="8dp"
        app:bl_arrowPosition="50dp"
        app:bl_arrowWidth="8dp"
        app:bl_cornersRadius="6dp"
        app:bl_strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:text="ABCD"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_fourteen_dp"
                android:visibility="gone"
               />

            <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/sender_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:text="Hello I am Fine"
                android:autoLink="web"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_fourteen_dp"
               />
            <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/attched_file_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_four_dp"
                android:drawableStart="@drawable/ic_attach_file"
                android:gravity="start"
                android:text="@string/attachment"
                android:textColor="@color/blue"
                android:textSize="@dimen/dimen_fourteen_dp" />
            <com.nebulacompanies.ibo.ecom.utils.MyTextViewEcom
                android:id="@+id/created_date_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dimen_four_dp"
                android:text="02-04-2019"
                android:textColor="@color/out_stock_color"
                android:textSize="@dimen/dimen_twelve_sp"/>
        </LinearLayout>
    </com.daasuu.bl.BubbleLayout>




</LinearLayout>