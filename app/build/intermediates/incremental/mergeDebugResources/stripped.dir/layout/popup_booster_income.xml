<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_inset"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/table_effect_popup"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_two_dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_rounded_green_top_info_popup"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:text="@string/customer_id"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/customer_id1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_rounded_white_top_info_popup"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:paddingBottom="@dimen/dimen_two_dp"
                    android:paddingEnd="@dimen/dimen_two_dp"
                    android:paddingLeft="@dimen/dimen_four_dp"
                    android:paddingRight="@dimen/dimen_two_dp"
                    android:paddingStart="@dimen/dimen_four_dp"
                    android:paddingTop="@dimen/dimen_two_dp"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cfcfcf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/nebula"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:text="@string/customer_name"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/customer_name1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@android:color/white"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:paddingBottom="@dimen/dimen_two_dp"
                    android:paddingEnd="@dimen/dimen_two_dp"
                    android:paddingLeft="@dimen/dimen_four_dp"
                    android:paddingRight="@dimen/dimen_two_dp"
                    android:paddingStart="@dimen/dimen_four_dp"
                    android:paddingTop="@dimen/dimen_two_dp"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cfcfcf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/nebula"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:text="@string/payment_plan"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/payment_plan1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@android:color/white"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cfcfcf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/nebula"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:text="@string/amount_received"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/amount_received1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@android:color/white"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cfcfcf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/nebula"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:text="@string/pending_amount"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/pending_amount1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@android:color/white"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cfcfcf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:weightSum="1">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/nebula"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:text="@string/installment_amount"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/installment_amount1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@android:color/white"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cfcfcf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/nebula"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:text="@string/product_name"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/product_Name1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@android:color/white"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cfcfcf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:weightSum="1">

                <com.nebulacompanies.ibo.view.MyTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_rounded_green_bottom_info_popup"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:text="@string/type"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white" />

                <com.nebulacompanies.ibo.view.MyTextView
                    android:id="@+id/typeof1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="0.5"
                    android:background="@drawable/drawable_rounded_white_bottom_info_popup"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>