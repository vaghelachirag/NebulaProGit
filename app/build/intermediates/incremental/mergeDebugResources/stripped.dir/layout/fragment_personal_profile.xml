<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dimen_five_dp"
    android:background="@drawable/drawable_rounded_white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_five_dp"
        android:background="@drawable/drawable_rounded_white"
        android:orientation="vertical"
        android:padding="@dimen/dimen_five_dp">

        <LinearLayout
            android:id="@+id/llUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_two_dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/dimen_five_dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/icon_name" />

            <com.nebulacompanies.ibo.view.MyTextView
                style="@style/StyleTitleTextView"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="0.75"
                android:longClickable="false"
                android:text="@string/prompt_ibo_name"
                android:textSize="@dimen/dimen_twelve_sp"
                android:textStyle="bold" />

            <com.nebulacompanies.ibo.view.MyTextView
                android:id="@+id/txtIBOName"
                style="@style/StyleTitleTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_weight="0.90"
                android:longClickable="false"
                android:textColor="@color/color_text"
                android:textSize="@dimen/dimen_twelve_sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_two_dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/dimen_five_dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/icon_mobile_nu" />

            <com.nebulacompanies.ibo.view.MyTextView
                style="@style/StyleTitleTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_margin="0dp"
                android:layout_weight="0.75"
                android:longClickable="false"
                android:text="@string/prompt_phone_no"
                android:textSize="@dimen/dimen_twelve_sp"
                android:textStyle="bold" />

            <com.nebulacompanies.ibo.view.MyTextView
                android:id="@+id/txtPhoneNo"
                style="@style/StyleTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_margin="0dp"
                android:layout_weight="0.90"
                android:longClickable="false"
                android:textColor="@color/color_text"
                android:textSize="@dimen/dimen_twelve_sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:gravity="center_horizontal"
            android:padding="@dimen/dimen_two_dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/dimen_five_dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/icon_email" />

            <com.nebulacompanies.ibo.view.MyTextView
                style="@style/StyleTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="0.75"
                android:longClickable="false"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/prompt_email_id"
                android:textSize="@dimen/dimen_twelve_sp"
                android:textStyle="bold" />

            <com.nebulacompanies.ibo.view.MyTextView
                android:id="@+id/txtEmailId"
                style="@style/StyleTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="0.90"
                android:longClickable="false"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/color_text"
                android:textSize="@dimen/dimen_twelve_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:padding="@dimen/dimen_two_dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/dimen_five_dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/icon_date_of_join" />

            <com.nebulacompanies.ibo.view.MyTextView
                style="@style/StyleTitleTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="0.75"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:longClickable="false"
                android:text="@string/prompt_date_of_join"
                android:textSize="@dimen/dimen_twelve_sp"
                android:textStyle="bold" />

            <com.nebulacompanies.ibo.view.MyTextView
                android:id="@+id/txtDateOfJoining"
                style="@style/StyleTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="0.90"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:longClickable="false"
                android:textColor="@color/color_text"
                android:textSize="@dimen/dimen_twelve_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:padding="@dimen/dimen_two_dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/dimen_five_dp"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_gender" />

            <com.nebulacompanies.ibo.view.MyTextView
                style="@style/StyleTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="0.75"
                android:longClickable="false"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/prompt_gender"
                android:textSize="@dimen/dimen_twelve_sp"
                android:textStyle="bold" />

            <com.nebulacompanies.ibo.view.MyTextView
                android:id="@+id/txtGender"
                style="@style/StyleTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="0.90"
                android:longClickable="false"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/color_text"
                android:textSize="@dimen/dimen_twelve_sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:gravity="center"
            android:padding="@dimen/dimen_two_dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/dimen_five_dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/icon_address" />

            <com.nebulacompanies.ibo.view.MyTextView
                style="@style/StyleTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="0.75"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:longClickable="false"
                android:text="@string/prompt_address"
                android:textSize="@dimen/dimen_twelve_sp"
                android:textStyle="bold" />

            <com.nebulacompanies.ibo.view.MyTextView
                android:id="@+id/txtAddress"
                style="@style/StyleTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_weight="0.90"
                android:longClickable="false"
                android:maxLines="10"
                android:singleLine="false"
                android:textColor="@color/color_text"
                android:textSize="@dimen/dimen_twelve_sp" />
        </LinearLayout>


        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/llChangePwd"
            style="@style/StyleTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:longClickable="false"
            android:text="@string/change_password_underline"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_twelve_sp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
