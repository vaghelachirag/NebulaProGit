<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_inset"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.nebulacompanies.ibo.view.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/dimen_ten_dp"
            android:layout_marginLeft="@dimen/dimen_ten_dp"
            android:layout_marginRight="@dimen/dimen_ten_dp"
            android:layout_marginStart="@dimen/dimen_ten_dp"
            android:text="Badges"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_sixteen_sp" />

        <ImageView
            android:id="@+id/img_income_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimen_eight_dp"
            android:background="@drawable/nebula_effect"
            android:contentDescription="@null"
            android:padding="@dimen/dimen_five_dp"
            app:srcCompat="@drawable/ic_close_new_white" />
    </RelativeLayout>

    <ListView
        android:id="@+id/myincome_show_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_income"
        android:layout_margin="@dimen/dimen_three_dp"
        android:background="@drawable/drawable_rounded_white_popup"
        android:choiceMode="singleChoice"
        android:clickable="false"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:fadeScrollbars="false"
        android:padding="@dimen/dimen_three_dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/scrollview"
        android:smoothScrollbar="true" />
    <!--</android.support.v7.widget.CardView>
     android:background="@drawable/drawable_rounded_white"
     android:layout_marginTop="@dimen/dimen_forty_dp"-->
</RelativeLayout>