<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_six_dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="0.01dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/nebula"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/bonanza_tree">

            <com.nebulacompanies.ibo.view.MyTextView
                android:id="@+id/bonanza_leg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leg 1"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                android:layout_gravity="center" />

            <com.nebulacompanies.ibo.view.MyTextView
                android:id="@+id/bonanza_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievers: 2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_twelve_sp"
                android:padding="5dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>