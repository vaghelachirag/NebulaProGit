<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_ten_dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_two_dp"
            android:clickable="false"
            android:elevation="4dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/dimen_eight_dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_customer_theme"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sample_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sample_image"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/dimen_ten_dp"
                    android:text="Lorem Ipsum has been the\nindustry's standard dummy "
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </FrameLayout>

    <ImageView
        android:id="@+id/typedetail"
        android:layout_width="@dimen/dimen_twenty_dp"
        android:layout_height="@dimen/dimen_twenty_dp"
        android:layout_marginLeft="@dimen/dimen_eighty_dp"
        android:layout_gravity="center|top"

        android:scaleType="fitCenter" />
</FrameLayout>

