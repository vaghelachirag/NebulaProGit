<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:weightSum="1"
    android:background="@android:drawable/editbox_background_normal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:weightSum="1"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.8"
            android:layout_margin="5dp"
            android:src="@drawable/ibo"
            android:id="@+id/list_item_gender"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.2">

            <com.nebulacompanies.ibo.view.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Leg"
                android:textColor="@color/DARK_GREEN"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:textSize="@dimen/dimen_twelve_sp"
                android:gravity="start"
                android:layout_gravity="center_vertical"
                style="@style/SelectableItemBackground"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/leg3"
                android:id="@+id/list_item_leg_img"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:weightSum="1"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical">

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/list_item_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:textSize="@dimen/dimen_twelve_sp"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            style="@style/SelectableItemBackground"/>

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/list_item_joining_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textAlignment="gravity"
            android:textSize="@dimen/dimen_twelve_sp"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            style="@style/SelectableItemBackground"/>

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/list_item_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#837f7f"
            android:textAlignment="gravity"
            android:textSize="@dimen/dimen_twelve_sp"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            style="@style/SelectableItemBackground"/>

    </LinearLayout>
</LinearLayout>