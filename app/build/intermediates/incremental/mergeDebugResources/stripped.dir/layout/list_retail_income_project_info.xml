<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/retail_info_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="16">

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/emi_date_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3.8"
            android:gravity="center"
            android:padding="@dimen/dimen_four_dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_eleven_sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cfcfcf" />

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/cust_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3.2"
            android:gravity="center"
            android:padding="@dimen/dimen_four_dp"
            android:singleLine="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_eleven_sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cfcfcf" />

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/unit_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="@dimen/dimen_four_dp"
            android:singleLine="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_eleven_sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cfcfcf" />

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/emi_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="@dimen/dimen_four_dp"
            android:singleLine="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_eleven_sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cfcfcf" />

        <com.nebulacompanies.ibo.view.MyTextView
            android:id="@+id/retail_income_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="4dp"
            android:singleLine="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_eleven_sp" />
    </LinearLayout>
</LinearLayout>